        </div>
    </div>

    <div class="form-group row">
        <label for="EmployeeTypeId" class="col-sm-3">Mode Of Transpot :</label>
        <CustomInputSelect id="ModeOfTransportId" @bind-Value="@ObjStudent.CountryId" class="form-control col-sm-8">

